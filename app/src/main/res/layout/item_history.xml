<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/history_card_margin_sides"
    android:layout_marginTop="@dimen/history_card_margin_vertical"
    android:layout_marginRight="@dimen/history_card_margin_sides"
    android:layout_marginBottom="@dimen/history_card_margin_vertical"
    android:orientation="vertical"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_weather_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textAlignment="viewStart"
            android:textSize="@dimen/history_card_text_size"
            tools:text="Date" />

        <TextView
            android:id="@+id/text_weather_city_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textAlignment="viewStart"
            android:textSize="@dimen/history_card_text_size"
            tools:text="City Name" />

        <TextView
            android:id="@+id/text_weather_temperature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:textAlignment="viewStart"
            android:textSize="@dimen/history_card_text_size"
            tools:text="Temperature" />
    </LinearLayout>
</androidx.cardview.widget.CardView>